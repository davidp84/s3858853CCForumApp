<h1 class="display-4">User Page</h1>
<a asp-controller="User" asp-action="User" asp-route-id="">@user.user_name</a>
<img src="~/@user.image" width="120px" height="120px"/> 

<div class="row">
    <div class="col-md-12">
        <form asp-action="NewPost" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label label="subject">Subject:</label>
                <input label="subject" type="text" class="form-control" id="subject" value="" data-val="true"
                       data-val-required="Subject cannot be blank.">
                <span validation-for="subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label label="messageText">Message Text:</label>
                <input label="messageText" type="text" class="form-control" id="messageTExt" value="" data-val="true" />
            </div>
            <div>
                <fieldset>
                    <legend>Upload Image</legend>
                    <label for="Image">Image</label>
                    <input type="file" name="Image" />
                    <input name="imageName" type="hidden" value=Path.GetFileName(Image.FileName) />
                    <input name="imagePath" type="hidden" value=Image.FilePath/>
                    <br />
                    @*<input type="submit" value="Upload" />*@
                </fieldset>
            </div>
            <div>
                <table class="table">
                    <tr>
                        <td> <input type="submit" value="NewPost" class="btn btn-primary" asp-action="Forum" asp-route-id="@user.id"></td>
                        <td> <a class="btn btn-primary" asp-action="newPost" asp-route-id="@user.id">Submit</a></td>
                    </tr>
                </table>
            </div>
        </form>

        <form asp-action="UpdatePost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table table-striped">
                <tr>
                    <th class="table-primary">@Html.DisplayNameFor(x => x[0].subject)</th>
                    <th class="table-primary">@Html.DisplayNameFor(x => x[0].postTimeUTC)</th>
                    <th class="table-primary">@Html.DisplayName("Edit")</th>
                </tr>

                @for (int i = 0; i < Model.Count; i++)
                {
                    var previousPost = Model.ToList();

                    if (previousPost[i] != null)
                    {

                        <tr>
                            <td>@Html.DisplayFor(x => previousPost[i].subject)</td>
                            <td>@Html.DisplayFor(x => previousPost[i].postTimeUTC)</td>

                            <form asp-action="@previousPost[i].postTimeUTC">

                            <td>
                                <input asp-for="@previousPost[i].subject" name="EditPost" class="form-control"
                               type="hidden" value="@previousPost[i].subject" />
                                <input asp-for="@previousPost[i].messageText" name="EditPost" class="form-control"
                               type="hidden" value="@previousPost[i].messageText" />
                                <input asp-for="@previousPost[i].Image" name="EditPost" class="form-control"
                               type="hidden" value="@previousPost[i].Image" />
                                <input type="submit" class="btn btn-primary" asp-action="EditPost"
                               value="Edit" asp-route-id="@previousPost[i].postTimeUTC" />
                            </td>
                </form>
                </tr>
                    }
                }

        </table>


