@model Login

@{ 
    ViewData["Title"] = "Login";
}

<h1 class="display-4">Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" data-val="true"
                       data-val-required="The LoginID field is required." />
                <span asp-validation-for="id" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                <input id="Password" name="Password" type="password" 
                       class="form-control" data-val="true" 
                       data-val-required="The Password field is required." />
                @Html.ValidationMessage("Password", new  { @class = "text-danger"})
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

            @Html.ValidationMessage("LoginFailure", new {@class = ""})
        </form>
    </div>
</div>

@*Maybe have to use a different method to Link to Register Page*@
<div class="row">
    <div class="col-md-4">
        <form action="../Register">
            <div class="form-group">
                <input type="submit" value="Register" name="Register" class="btn btn-primary" />
            </div>

            @Html.ValidationMessage("LoginFailure", new {@class = ""})
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}